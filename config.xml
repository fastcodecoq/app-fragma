<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id      = "com.fragma.mobile"
    versionCode = "10"
    version     = "1.0">



    <name>Fragma Club</name>

    <description>
    Captura y comparte al instante tus mejores momentos Fragma con toda la comunidad del club, Facebook o Twitter.

    Enterate de todos los eventos del club, e incluso indicale a la aplicación que te recuerde uno de ellos.
    </description>

    <author href="http://gomosoft.pro" email="info@gomosoft.com">
        Gomosöft
    </author>

    <access origin="*" />
    <access origin="*.fragmaclub.com" />
    <access origin="http://fragmaclub.com" />
    <access origin="*.google.com"/>
    <access origin="*.googleapis.com"/>

    <preference name="DisallowOverscroll" value="true" />

    <preference name="target-device" value="universal" />
    <preference name="show-splash-screen-spinner" value="false" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="phonegap-version" value="2.9.0" />
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true"/>

    <gap:plugin name="com.phonegap.plugins.facebookconnect">
    <param name="APP_ID" value="1437152043163607" />
    <param name="APP_NAME" value="Fragma Club" />
    </gap:plugin>

    <icon src="appicon.png" gap:role="default" />
    <icon src="icon_96.png" width="96" height="96" />
    <icon src="icon_72.png" width="72" height="72" />
    <icon src="icon_48.png" width="48" height="48" />
    <icon src="icon_36.png" width="36" height="36" />

    <plugin name="File" value="org.apache.cordova.FileUtils" />
    <plugin name="FileTransfer" value="org.apache.cordova.FileTransfer" />    
    <plugin name="Accelerometer" value="org.apache.cordova.AccelListener" />
    <plugin name="Accelerometer" value="CDVAccelerometer" />
    <plugin name="Camera" value="org.apache.cordova.CameraLauncher" />
    <plugin name="Camera" value="CDVCamera" />

<feature name="http://api.phonegap.com/1.0/camera"/>
<feature name="http://api.phonegap.com/1.0/network"/>
<feature name="http://api.phonegap.com/1.0/notification"/>
<feature name="http://api.phonegap.com/1.0/media"/>
<feature name="http://api.phonegap.com/1.0/file"/>
<feature name="http://api.phonegap.com/1.0/geolocation"/>


</widget>